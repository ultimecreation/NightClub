                <h1  class="text-center py-5">Contact</h1>
                {{ form_start(contactForm )}}

                {{ form_widget(contactForm)}}

                <input type="submit" value="Envoyer" class="btn btn-primary btn-block mt-5">
            </div>
        </div>
    </div>
{% endblock %}


