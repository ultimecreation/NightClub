    <div id="evenements" class="bg-light">
        <h1  class="text-center py-5">Événements</h1>
            <div class="row p-5 d-flex justify-content-around">
                
                    {% for event in events %}
                    <div class="col-md-3">
                            <div class="card text-center my-5">
                                    <div class="card-header  bg-primary text-white">
                                        {{ event.title }}
                                    </div>
                                    <img class="card-img" src="{{event_image_directory}}/{{ event.image }}" alt="Card image cap">
                                    
                                    <div class="card-body py-5">
                                        {{ event.description }}
                                    </div>
                                    <div class="card-footer bg-primary text-white">
                                        {{ event.date|date("d-m-Y")}}
                                    </div>
                                </div>
                    </div>
                    {% endfor %}
               
            </div>
        </div>
    
    <div id="contact">
        
        <div class="row py-5 ">
            <div class="col-md-6 p-5">
                <h1  class="text-center py-5">Localisation</h1>
