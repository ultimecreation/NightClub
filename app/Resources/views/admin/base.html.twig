<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}NightClub.com{% endblock %}</title>
        {% block stylesheets %}
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
           
            <!-- Renders a link tag (if your module requires any CSS)
                 <link rel="stylesheet" src="/build/app.css"> -->
                 
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('build/app-css.css') }}">
        <link href="{{asset('@fortawesome/fontawesome-free/css/all.css')}}" rel="stylesheet"  type='text/css'>

        
    </head>
    <body> 
        <header>
            
            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
                <a class="navbar-brand bg-primary text-white p-2 rounded" href="{{ url('home')}}">NightClub </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                                <a class="nav-link" href="{{url('home')}}#apropos">À propos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{url('home')}}#contact">Contact</a>
                        </li>
                    </ul>
    
                    {% if app.user %}
                        <ul class="navbar-nav ml-auto">
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ url('admin')}} ">Administration </a>
                                </li>
                            {% endif %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ url('logout')}} ">Déconnexion </a>
                            </li>
                        </ul>
                    {% else %}
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ url('register')}} ">Inscription </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ url('login')}} ">Connexion</a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </nav>
            {% if app.request.attributes.get('_route') == 'home' %}
            <div id="hero" class="d-flex justify-content-center " >
                <img src="{{asset('img/bigdaddyhero.jpg')}} " alt="">
                <a href="" class="btn btn-primary "><i class="fa fa-share "></i> Prochaines Soirées </a>
            </div>
            {% else %}
            <div style="padding-top: 60px;"></div>
            <ul class="nav nav-pills nav-fill bg-light">
                <li class="nav-item" ><a href=" {{url('admin.user.list')}} " class="nav-link btn-primary"><i class="fa fa-user fa-5x py-2"></i><br> <strong>Utilisateurs</strong></a></li>
                <li class="nav-item" ><a href="{{url('admin.event.list')}} " class="nav-link btn-secondary"><i class="fa fa-newspaper fa-5x py-2"></i><br>Evénements</a></li>
                <li class="nav-item" ><a href="{{url('admin.contact.list')}} " class="nav-link btn-info"><i class="fa fa-envelope  fa-5x py-2"></i><br>Messages</a></li>
                
            </ul>
            {% endif %}
        </header>
        {% for label,messages in app.flashes %}
            {% for message in messages %}
            <div class="alert alert-{{ label }} text-center ">
                    {{ message }}
            </div>
            {% endfor %}
        {% endfor %}

        {% block body %}
            
            <div class="container">
                
            </div>
        {% endblock %}
        {% block footer %}
            <footer>
                <p class="lead text-center">&copy; 2011 / {{  "now"|date("Y") }}</p>
            </footer>
        {% endblock %}
        <script src="{{ asset('build/app-js.js') }}"></script>
        {% block javascripts %}
           
        {% endblock %}
        
        
    </body>
</html>
